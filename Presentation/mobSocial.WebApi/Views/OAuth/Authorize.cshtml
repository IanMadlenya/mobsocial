@using mobSocial.WebApi.Configuration.Infrastructure
@model mobSocial.WebApi.Models.Applications.ApplicationAuthorizeModel
@{
    Layout = "../Layout.cshtml";
    ViewBag.Title = "Authorize";
    var currentUser = ApplicationContext.Current.CurrentUser;
}
<div class="container">
    <div class="row">
        <div class="col-xs-12 col-lg-8 col-lg-offset-2">
            <fieldset block-ui>
                <div class="box no-border" style="margin-top: 30px">
                    <div class="box-header text-center">
                        <div class="box-title">
                            <b>mob</b>Social
                        </div>
                    </div>

                    <div id="authorize-page" class="box-body" style="padding: 0 30px 30px;">

                        <h3 class="no-padding no-margin">@Model.ApplicationName is requesting access to your account.</h3>
                        <p>The application would like to:</p>
                        <ul>
                            @foreach (var modelScope in Model.Scopes)
                            {
                                <li>
                                    <p>@modelScope.Description</p>
                                </li>
                            }
                        </ul>
                        <p>
                            The application <strong class="text-danger">will not</strong> be able to:
                        </p>
                        <ul>
                            <li>View your password</li>
                        </ul>
                        <form method="post" id="authForm">
                            <div class="text-center">
                                You are logged in as : @currentUser.Name
                                <div>
                                    <input type="submit" value="Allow" class="btn btn-primary"/>
                                    <a class="btn btn-default" href="@(Model.RedirectUrl)?error=access_denied">Deny</a>
                                </div>
                               
                            </div>

                        </form>
                    </div>

                </div>
            </fieldset>
        </div>
    </div>
</div>

